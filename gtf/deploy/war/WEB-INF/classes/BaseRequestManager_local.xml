<!-- Action Mappings for the lab service -->

<mappings>

   <!-- **************** -->
   <!-- *    Login     * -->
   <!-- **************** -->

   <!-- prepare login -->
   <uri path    = "/login.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "passport"/>
      <property name = "bean-class"      value = "org.yang.web.applicationContainer.PassportBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/login/login.jsp"/>
   </uri>

   <!-- prepare login -->
   <uri path    = "/loginPDA.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "passport"/>
      <property name = "bean-class"      value = "org.yang.web.applicationContainer.PassportBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/login/loginPDA.jsp"/>
   </uri>

   <!-- process login and switch between services -->
   <uri path    = "/main.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"          value = "passport"/>
      <property name = "bean-class"         value = "org.yang.web.applicationContainer.PassportBean"/>
      <property name = "bean-scope"         value = "SESSION"/>
      <property name = "default-forward"    value = "/default/maindesk/main.jsp"/>
      <property name = "login-fail-forward" value = "/login.wf"/>

      <property name = "MainDesk"        value = "/default/maindesk/main.jsp"/>
      <property name = "EngineersDesk"   value = "/default/engineer/engineer.jsp"/>
      <property name = "AccountManager"  value = "/default/admindesk/accounts.jsp"/>
      <property name = "ScheduleManager" value = "/default/scheduleService/scheduleService.jsp"/>
      <property name = "ProjectManager"  value = "/default/projects/projects.jsp"/>
      <property name = "ReportManager"   value = "/default/reports/reports.jsp"/>
   </uri>
   
   <!-- process login and switch between services -->
   <uri path    = "/mainPDA.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"          value = "passport"/>
      <property name = "bean-class"         value = "org.yang.web.applicationContainer.PassportBean"/>
      <property name = "bean-scope"         value = "SESSION"/>
      <property name = "default-forward"    value = "/projectPDA.wf?actiontype=enter"/>
      <property name = "login-fail-forward" value = "/loginPDA.wf"/>
   </uri>
   
   <!-- process load and update userContact information -->
   <uri path    = "/userContact.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "userContact"/>
      <property name = "bean-class"      value = "org.yang.web.services.serviceManager.UserInformationBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/maindesk/userContact.jsp"/>
      <property name = "fail-forward"    value = "/default/maindesk/userContact.jsp"/>
   </uri>
   
   <!-- ************************** -->
   <!-- *    Engineer's Desk     * -->
   <!-- ************************** -->
    
   <!-- display navigation tree -->
   <uri path    = "/domainTree.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "domainTree"/>
      <property name = "bean-class"      value = "org.yang.web.services.domainManage.DomainTreeBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/engineer/domainTree.jsp"/>
      <property name = "fail-forward" 	 value = "/default/engineer/domainTree.jsp"/>
   </uri>
   
   <!-- display navigation tree -->
   <uri path    = "/domain.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "domainBean"/>
      <property name = "bean-class"      value = "org.yang.web.services.domainManage.DomainInformationBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/engineer/domainInformation.jsp"/>
      <property name = "reload-forward"  value = "/default/engineer/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/engineer/domainInformation.jsp"/>
   </uri>
   
   <!-- ***************************** -->
   <!-- *    User Administrator     * -->
   <!-- ***************************** -->
    
   <!-- display navigation tree -->
   <uri path    = "/accountTree.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "accountTree"/>
      <property name = "bean-class"      value = "org.yang.web.services.accountManage.AccountManagerBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/admindesk/accountTree.jsp"/>
      <property name = "fail-forward" 	 value = "/default/admindesk/accountTree.jsp"/>
   </uri>
    
   <!-- display group table -->
   <uri path    = "/group.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "groupBean"/>
      <property name = "bean-class"      value = "org.yang.web.services.accountManage.GroupBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/admindesk/grouptable.jsp"/>
      <property name = "reload-forward"  value = "/default/admindesk/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/admindesk/grouptable.jsp"/>
   </uri>

   <!-- display user table -->
   <uri path    = "/user.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "userBean"/>
      <property name = "bean-class"      value = "org.yang.web.services.accountManage.UserBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/admindesk/usertable.jsp"/>
      <property name = "reload-forward"  value = "/default/admindesk/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/admindesk/usertable.jsp"/>
   </uri>
   
   <!-- display service table -->
   <uri path    = "/service.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "serviceBean"/>
      <property name = "bean-class"      value = "org.yang.web.services.accountManage.ServiceBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/admindesk/servicetable.jsp"/>
      <property name = "alt-forward"     value = "/group.wf"/>
      <property name = "fail-forward" 	 value = "/default/admindesk/servicetable.jsp"/>
   </uri>

   <uri path    = "/e_user.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "e_userForm"/>
      <property name = "default-forward" value = "/default/engineerdesk/e_usertable.jsp"/>
      <property name = "fail-forward" 	 value = "/default/engineerdesk/e_usertable.jsp"/>
      <property name = "alt-forward" 	 value = "/default/share/top.jsp?go=login.wf"/>
   </uri>

   <uri path    = "/m_user.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "m_userForm"/>
      <property name = "default-forward" value = "/default/maindesk/m_usertable.jsp"/>
      <property name = "fail-forward" 	 value = "/default/maindesk/m_usertable.jsp"/>
   </uri>
   
   <!-- ***************************** -->
   <!-- *      Schedule Service     * -->
   <!-- ***************************** -->
    
   <!-- display navigation tree -->
   <uri path    = "/projectList.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "projectList"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.scheduleManager.web.ScheduleServiceBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/scheduleService/scheduleServiceBodyLeft.jsp"/>
      <property name = "reload-forward"  value = "/default/scheduleService/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/scheduleService/scheduleServiceBodyLeft.jsp"/>
   </uri>

   <!-- display project table -->
   <uri path    = "/project.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "projectBean"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.scheduleManager.web.ProjectInformationBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/scheduleService/projectInformation.jsp"/>
      <property name = "reload-forward"  value = "/default/scheduleService/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/scheduleService/projectInformation.jsp"/>
   </uri>
   
   <!-- ***************************** -->
   <!-- *      Project Manager      * -->
   <!-- ***************************** -->
    
   <!-- display navigation tree -->
   <uri path    = "/projectsTree.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "projectsTree"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.projectManager.web.ActiveProjectsTreeBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/projects/projectsTree.jsp"/>
      <property name = "reload-forward"  value = "/default/projects/reload.jsp"/>
      <property name = "fail-forward" 	 value = "/default/projects/projectsTree.jsp"/>
   </uri>

   <!-- display project table -->
   <uri path    = "/projectNotes.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "projectNotesBean"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.projectManager.web.ProjectNotesBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "application"     value = "/default/projects/projectNotes.jsp"/>
      <property name = "datasheet"       value = "/default/projects/dataSheet.jsp"/>
      <property name = "fail-forward" 	 value = "/default/projects/projectNotes.jsp"/>
   </uri>
   
   <!-- display project table -->
   <uri path    = "/stageNotes.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "stageNotesBean"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.projectManager.web.StageNotesBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/projects/projectsRight.jsp"/>    
      <property name = "masterTable"     value = "/default/projects/masterTable.jsp"/>
      <property name = "stageNotes"      value = "/default/projects/stageNotes.jsp"/>
      <property name = "reload"          value = "/default/projects/reload.jsp"/>
   </uri>
   
   <!-- Photo data Upload -->
   <uri path    = "/photoUpload.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "photoUploadBean"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.projectManager.web.PhotoUploadBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "working-url"     value = "http://localhost/temp/"/>
      <property name = "default-forward" value = "/default/projects/photoUpload.jsp"/>
   </uri>
   
   <!-- process login and switch between services -->
   <uri path    = "/projectPDA.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"          value = "pdaBean"/>
      <property name = "bean-class"         value = "org.yang.customized.gtf.services.projectManager.web.PDAProjectNotesBean"/>
      <property name = "bean-scope"         value = "SESSION"/>
      <property name = "default-forward"    value = "/default/projects/projectPDA.jsp"/>
   </uri>
   
   <!-- ***************************** -->
   <!-- *      Reports Manager      * -->
   <!-- ***************************** -->
    
   <!-- display navigation tree -->
   <uri path    = "/reportsPanel.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "reportsPanel"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.reportManager.web.ReportsBrowsingPanelBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/reports/reportsPanel.jsp"/>
      <property name = "fail-forward" 	 value = "/default/reports/reportsPanel.jsp"/>
   </uri>
   
   <!-- display report items list -->
   <uri path    = "/reportsList.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "reportsList"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.reportManager.web.ReportsListBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/reports/masterTable.jsp"/>
      <property name = "fail-forward" 	 value = "/default/reports/masterTable.jsp"/>
   </uri>
   
   <!-- display report items list -->
   <uri path    = "/stageAccess.wf"
        handler = "org.yang.web.controller.GenericHandler">
      <property name = "bean-name"       value = "stageAccess"/>
      <property name = "bean-class"      value = "org.yang.customized.gtf.services.reportManager.web.ReportsStageAccessBean"/>
      <property name = "bean-scope"      value = "SESSION"/>
      <property name = "default-forward" value = "/default/reports/stageAccess.jsp"/>
      <property name = "fail-forward" 	 value = "/default/reports/stageAccess.jsp"/>
   </uri>
   
   <!-- ***************** -->
   <!-- *    Utility    * -->
   <!-- ***************** -->

   <!-- File Upload -->
   <uri path    = "/fileUpload.wf"
        handler = "org.yang.web.fileUploader.FileUploader">
      <property name = "bean-name"         value = "passport"/>
      <property name = "bean-class"        value = "org.yang.web.applicationContainer.PassportBean"/>
      <property name = "bean-scope"        value = "SESSION"/>
      <property name = "working-directory" value = "e:/temp/"/>
      <property name = "default-forward"   value = "/photoUpload.wf?actiontype=browse"/>
   </uri>

</mappings>